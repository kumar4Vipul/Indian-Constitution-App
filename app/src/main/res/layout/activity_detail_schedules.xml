<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_schedules"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.appbusters.robinpc.constitutionofindia.view.DetailSchedules">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/app_bar_elevation"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Details Screen"
                android:textColor="#FFF"
                android:fontFamily="cursive"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/textView"
                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardCornerRadius="4sp"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="7sp"
            android:layout_marginBottom="3sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDifferent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9sp"
                        android:textSize="19sp"
                        android:textColor="#FFF"
                        android:id="@+id/header"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_centerVertical="true"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:padding="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_favorite_border_white_24"
                        android:id="@+id/save_button"/>

                </RelativeLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:id="@+id/seekbar"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000"
                        android:id="@+id/desc"
                        android:layout_marginBottom="15sp"
                        android:fontFamily="serif-monospace"
                        android:textIsSelectable="true" />

                </ScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="65sp"
            android:layout_height="65sp"
            app:cpb_progressbar_color="@color/colorPrimaryDifferent"
            app:cpb_background_progressbar_color="@color/colorWhiteShade"
            app:cpb_progressbar_width="5sp"
            app:cpb_indeterminate_mode="true"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/circular_progress"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:alpha="0.65"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:onClick="onClick"/>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
