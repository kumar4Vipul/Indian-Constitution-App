<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnknownAttribute -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            tools:background="@color/black"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/startLineIv"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_weight="1"
            tools:ignore="ContentDescription"
            android:background="@color/skeleton_one"
            app:layout_constraintStart_toEndOf="@id/startLineIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_weight="1"
            tools:ignore="ContentDescription"
            android:background="@color/skeleton_one"
            app:layout_constraintStart_toEndOf="@id/startLineIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/titleTv"
            android:textSize="18sp"
            android:textColor="@color/black"
            fontPath="fonts/home_regular.ttf"
            tools:text="@string/preamble_featured"
            android:paddingStart="40dp"
            android:gravity="start|center_vertical"
            tools:ignore="MissingPrefix,RtlSymmetry"
            app:layout_constraintStart_toEndOf="@id/startLineIv"
            app:layout_constraintEnd_toStartOf="@id/bookmarkIv"/>

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/bookmarkIv"
            android:contentDescription="@string/bookmark_button"
            android:src="@drawable/ic_bookmark"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:tint="@color/skeleton_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>