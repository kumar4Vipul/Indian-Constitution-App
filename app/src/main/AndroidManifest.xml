<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appbusters.robinpc.constitutionofindia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.preamble"
            android:label="@string/title_activity_preamble"
            android:parentActivityName=".ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.schedules"
            android:label="@string/title_activity_schedules"
            android:parentActivityName=".ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.amendments"
            android:label="@string/title_activity_amendments"
            android:parentActivityName=".ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ABOUT"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.DetailSchedules" />
        <activity
            android:name=".view.SavedActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.ScrollingActivity"/>
        <activity android:name=".ui.AllPartsActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.respectiveSubpartsActivity" android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.AllPartsActivity"/>
    </application>

</manifest>