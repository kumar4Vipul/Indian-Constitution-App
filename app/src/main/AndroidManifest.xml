<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appbusters.robinpc.constitutionofindia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ConstitutionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".temp.ui.SplashActivity"
            android:theme="@style/SplashTheme">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".temp.ui.preamble"
            android:label="@string/title_activity_preamble"
            android:parentActivityName=".temp.ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.schedules"
            android:label="@string/title_activity_schedules"
            android:parentActivityName=".temp.ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.amendments"
            android:label="@string/title_activity_amendments"
            android:parentActivityName=".temp.ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.ABOUT"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.view.DetailSchedules"
            android:label="Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.view.SavedActivity"
            android:parentActivityName=".temp.ui.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.AllPartsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.ui.respectiveSubpartsActivity"
            android:parentActivityName=".temp.ui.AllPartsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>